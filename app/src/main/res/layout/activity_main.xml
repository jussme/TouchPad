<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testPanelButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/networkInterfacesInfo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="1dp"
        android:contentDescription="@string/inputActivityInitButtonDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/touchPad"
        app:layout_constraintTop_toTopOf="@+id/touchPad"
        app:srcCompat="@drawable/outline_perm_scan_wifi_white_48" />

    <ImageButton
        android:id="@+id/touchPad"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/networkInterfacesInfoActivityButtonDesc"
        app:layout_constraintEnd_toStartOf="@+id/networkInterfacesInfo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_touch_app_white_48" />

</androidx.constraintlayout.widget.ConstraintLayout>